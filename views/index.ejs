<!DOCTYPE html>
<html>

<head>
  <title>
    <%=title %>
  </title>
  <meta charset="UTF-8">
  <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
  <script src="javascripts/angular/angular.min.js"></script>
  <script src="javascripts/angular/angular-route.js"></script>
</head>

<body ng-app="photoStore">
  <div class="container">
    <nav class="navbar navbar-default" ng-controller="NavController">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a href="#" ng-click="goToUser()"> Current user: {{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="#" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Login</a></li>
      </ul>
    </nav>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ng-view></ng-view>
      </div>
    </div>
  </div>
  <script src="javascripts/angular/angularApp.js"></script>
  <script src="javascripts/angular/controllers/auth.js"></script>
  <script src="javascripts/angular/services/auth.js"></script>
  <script src="javascripts/angular/controllers/main.js"></script>
  <script src="javascripts/angular/controllers/nav.js"></script>
</body>

</html>